<div class="form-group">
<%= form_for(@article) do |f| %>
  <%= f.label :Title %>
  <%= f.text_field :title %>
  <%= f.label :Content %>
  <div class="form-control ace_editor ace-solarized-light" style="width: 591px; height: 200px;">
  <%= f.text_area :content %>
  </div>
  <div class= "btn btn-default">
  <%= f.submit :'Create article' %>
  </div>
<% end %>
</div>
